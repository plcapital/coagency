extends ../layouts/layout
block content
    div(class="headings")
        h1 My Groups
        h2 Select a group to proceed.
    div(class="content")
        ul(class="margin_left_big")
            each group, i in groups
                li
                    a(href="/viewGroup?groupId=#{group._id}") #{group.name}&nbsp;-&nbsp;#{group.description}
    div(class="footer")
