extends ../layouts/layout
block content
    div(class="headings")
        h1 My Groups
        h2 Select a group to proceed.
    div(class="content")
        ul
            each group, i in groups
                li
                    a(href="/viewGroup?groupId=#{group._id}") #{group.name}
                    |&nbsp;-&nbsp;
                    =group.description
                    |&nbsp;-&nbsp;
                    =group.administrator
    div(class="footer")
