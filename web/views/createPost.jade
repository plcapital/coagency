extends layout
block content
    h1= title
    form#formCreatePost(name="createPost", method="post", action="/createPost")
        | *Listing (hidden):
        select#inputListing(name="listing")
            option(value="general") General
        | <br />
        | *Type:
        input#inputType(type="radio", value="forSale", name="postType")
        | For Sale
        input#inputType(type="radio", value="forRent", name="postType")
        | For Rent
        | <br />
        | Auction:
        input#inputIsAuction(type="checkbox", value="true", name="postIsAuction")
        // would like to use native HTML5 date input, but unfortunately browser support is lacking
        input#inputAuctionDate(type="text", placeholder="dd/MM/yyyy time", name="postAuctionDate")
        | <br />
        | *Co-Broke Listing:
        select#inputCoBroke(name="coBroke")
            option(value="coBroke") Co-Broke
        | <br />
        | *Listing Category:
        input#inputCategory(type="radio", value="residential", name="postCategory")
        | Residential
        input#inputCategory(type="radio", value="commercial", name="postCategory")
        | Commercial
        | <br />
        | *Group Type:
        select#inputGroupType(name="groupType")
            option(value="terrace") Terrace/Link/Townhouse
        | <br />
        | *Property Type:
        select#inputPropertyType(name="propertyType")
            option(value="terrace") 2-sty Terrace/Link House
        | <br />
        | Built Up:
        input#inputBuiltUp(type="text", name="postBuiltUp")
        | <br />
        | Land Area:
        input#inputLandArea(type="text", name="postLandArea")
        | <br />
        | Size Measure Code:
        select#inputSizeMeasure(name="sizeMeasure")
            option(value="squareFeet") Square Feet
        | <br />
        | *Asking Price:
        input#inputAskingPrice(type="text", name="postAskingPrice")
        | <br />
        | *Asking Price per (sq. ft or sq. m):
        input#inputAskingPricePer(type="text", name="postAskingPricePer")
        | <br />
        | <br />
        input#inputTitle(type="text", placeholder="title", name="postTitle")
        input#inputDescription(type="text", placeholder="description", name="postDescription")
        button#buttonSubmit(type="submit") submit